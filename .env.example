# ── Polyverse Agent Environment ──
# Copy this to .env and fill in your values.
# NEVER commit .env to version control!

# ── Platform Tokens ──

# Discord Bot Token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_bot_token_here

# Telegram Bot Token (from @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ── LLM Configuration ──

# OpenAI-compatible API (supports proxy servers like LiteLLM, OneAPI, etc.)
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ── SLM Configuration (For Semantic Memory Compression) ──
SLM_API_BASE=https://openrouter.ai/api/v1
SLM_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxx
SLM_MODEL=google/gemini-2.5-flash

# ── Agent Settings ──

# Logging level (trace, debug, info, warn, error)
# RUST_LOG=info
# PA_AGENT_NAME=PolyverseAgent
